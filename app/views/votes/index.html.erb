<div class="container-fluid">
  <h1><b>Votaciones</b></h1>

  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Votante</th>
        <th>Proyecto votado</th>
        <th>Elección</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @votes.each do |vote| %>
        <%if can? :read, vote %>
          <tr>
            <td><%= vote.user.name %></td>
            <td><%= vote.question.pregunta %></td>
            <td><%= vote.estado %></td>
            <td><%= link_to 'Ver', vote %></td>                
            <td>
              <% if can? :update, vote%>            
                <%= link_to 'Editar', edit_vote_path(vote) %>
              <% end%>
            </td>         
            <td>
              <% if can? :destroy, vote%> 
                <%= link_to 'Eliminar', vote, method: :delete, data: { confirm: '¿Estás seguro?' } %>
              <%end%>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table> 

  <br>

  <div class="btn text-white">
   <%= link_to 'Votar', new_vote_path %>
  </div>
</div>

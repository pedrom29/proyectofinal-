
<div class="container-fluid">
  <h1>Votar</h1>

  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Question</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @votes.each do |vote| %>
        <tr>
          <td><%= vote.user.name %></td>
          <td><%= vote.question.pregunta %></td>
          <td><%= vote.estado %></td>
          <td><%= link_to 'Ver', vote %></td>
          <% if can? :update, vote%>
            <td><%= link_to 'Editar', edit_vote_path(vote) %></td>
          <% end%>
          <% if can? :destroy, vote%> 
            <td><%= link_to 'Eliminar', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Votar', new_vote_path %>
</div>


<div class="container-fluid">
  <h1><b>Votaciones</b></h1>

  <table class="table">
    <thead>
      <tr>
        <th>Votante</th>
        <th>Proyecto votado</th>
        <th>Elecci√≥n</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @votes.each do |vote| %>
        <tr>
          <td><%= vote.user.name %></td>
          <td><%= vote.question.pregunta %></td>
          <td><%= vote.estado %></td>
          <td>
            <%if can? :read, vote %>
              <%= link_to 'Ver', vote %></td>    
            <% end %>
          <td>
          <% if can? :update, vote%>            
            <%= link_to 'Editar', edit_vote_path(vote) %>
          <% end%>
          </td>         
          <td>
            <% if can? :destroy, vote%> 
              <%= link_to 'Eliminar', vote, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
 

  <br>

  <div class="btn text-white">
   <%= link_to 'Votar', new_vote_path %>
  </div>
</div>

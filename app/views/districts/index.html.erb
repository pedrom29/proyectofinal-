<p id="notice"><%= notice %></p>

<h1>Districts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td><%= link_to 'Show', district_path(district), class: 'btn btn-warning text-white' %></td>
        <td><%= link_to 'Edit', edit_district_path(district), class: 'btn btn-success text-white' %></td>
        <td><%= link_to 'Destroy',district, class: 'btn btn-danger text-white',  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


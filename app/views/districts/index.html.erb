<div class="container-fluid table-responsive" id="districts">
  <h1>Comunas</h1>

<form action="<%= districts_path%>">
  <h3>Buscador <input name="q"></h3>
  </form>
<hr>

  <table class="table table-bordered">
    <thead class=thead-dark>

      <tr>
        <th>Nombre</th>
        <th>Distrito</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

      <%= render @districts %>


    
    </tbody>
  </table>

  <br>

  <%= link_to 'Agregar distrito', new_district_path %>

  <script>
    $("[name=q]").keyup(function(event){
      $.ajax({
        url: '<%= districts_path%>',
        type: 'GET',
        dataType: 'script',
        data: {q: $(this).val()}
      })
    });

  </script>
</div>
